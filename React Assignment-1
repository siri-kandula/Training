ProfileCard.js:
import React from "react";

const ProfileCard = ({ name, greeting, imageSrc }) => (
  <div className="profile-card">
    
    <img src={imageSrc} alt={name} />
    <h2>{name}</h2>
    <p>{greeting}</p>
  </div>
);

export default ProfileCard;

App.js:
import React from "react";
import ProfileCard from "./ProfileCard";
import "./App.css";

const App = () => {
  return (
    <div className="app">
            <h1 className="title">User Profiles</h1>
            <div className="profile-container">
      <ProfileCard name="Siri" greeting="Hello there!" imageSrc="data:image/jpeg;base64," />
      <ProfileCard name="Vinay" greeting="Good to see you!" imageSrc="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQsCeUfELCr5BJFVbhIibwiOPR71DCfN_vkaKawtXW6J7Uulc-lZMWdsd5O0NCuMYwcH0M&usqp=CAU" />
      <ProfileCard name="Harshini" greeting="Welcome back!" imageSrc="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR4PAM5uWQoFQSv2rUqfFVU_nAYdtQAWxwu1Q&s" />
    </div>
    </div>
  );
};

export default App;


App.css:
.app {
